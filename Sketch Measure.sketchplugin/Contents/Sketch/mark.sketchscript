function commandOverlays(context) {
    SM.init(context, "mark-overlays");
}

function commandSizes(context) {
    if(NSEvent.modifierFlags() == 917504){
        SM.init(context, "mark-sizes");
    }
    else{
        SM.init(context, "lite-sizes");
    }
}

